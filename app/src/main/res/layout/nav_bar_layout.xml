<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:background="@drawable/bottom_nav_bar"
    android:padding="6dp">

    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="0dp"
        android:layout_height="@dimen/lb_30_sp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@id/btn_transactions"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_group762" />

    <TextView
        android:id="@+id/txt_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rout_medium"
        android:text="Home"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="9dp"
        app:layout_constraintEnd_toStartOf="@id/txt_transactions"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_home" />

    <ImageButton
        android:id="@+id/btn_transactions"
        android:layout_width="0dp"
        android:layout_height="@dimen/lb_30_sp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@id/btn_receipt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/btn_home"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_group660" />

    <TextView
        android:id="@+id/txt_transactions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rout_medium"
        android:text="Transactions"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="9dp"
        app:layout_constraintEnd_toStartOf="@id/txt_pool"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/txt_home"
        app:layout_constraintTop_toBottomOf="@id/btn_transactions" />

    <ImageButton
        android:id="@+id/btn_receipt"
        android:layout_width="0dp"
        android:layout_height="@dimen/lb_30_sp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@id/btn_settings"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/btn_transactions"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_receipts_uactive" />

    <TextView
        android:id="@+id/txt_pool"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rout_medium"
        android:text="Receipts"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="9dp"
        app:layout_constraintEnd_toStartOf="@id/txt_settings"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/txt_transactions"
        app:layout_constraintTop_toBottomOf="@id/btn_receipt" />

    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="0dp"
        android:layout_height="@dimen/lb_30_sp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/btn_receipt"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_group663" />

    <TextView
        android:id="@+id/txt_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rout_medium"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/txt_pool"
        app:layout_constraintTop_toBottomOf="@id/btn_receipt" />
</androidx.constraintlayout.widget.ConstraintLayout>
