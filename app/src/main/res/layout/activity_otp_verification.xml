<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".views.OtpVerificationActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_condensed"
            android:gravity="center"
            android:text="@string/verification_title"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:fontFamily="@string/font_family_regular"
            android:gravity="center"
            android:text="@string/verification_alert"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/verify_process"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:fontFamily="@string/font_family_regular"
            android:gravity="center"
            android:text="@string/instruction_to_verify"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alert" />

        <EditText
            android:id="@+id/editTextCode"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/colorAccent"
            android:digits="0123456789"
            android:drawablePadding="10dp"
            android:hint="Enter verification code"
            android:inputType="phone"
            android:lines="1"
            android:maxLength="10"
            android:textColor="#fff"
            android:textColorHint="#33FFFFFF" />


        <TextView
            android:id="@+id/error_fire_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_light"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/button_one"
                android:layout_width="55.04dp"
                android:layout_height="55.04dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:text="@string/btn_one"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_two"
                android:layout_width="55.04dp"
                android:layout_height="55.04dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:text="@string/btn_two"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_three"
                android:layout_width="55.04dp"
                android:layout_height="55.04dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:text="@string/btn_three"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_four"
                android:layout_width="55.04dp"
                android:layout_height="55.04dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:text="@string/btn_four"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_five"
                android:layout_width="55.04dp"
                android:layout_height="55.04dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:text="@string/btn_five"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_light"
                android:text="@string/retry_otp"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/otp_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_light"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Verify" />

    </LinearLayout>

    <ImageView
        android:id="@+id/globe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ss" />
</RelativeLayout>