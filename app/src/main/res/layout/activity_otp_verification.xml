<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Views.OtpVerificationActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_family_condensed"
        android:gravity="center"
        android:text="@string/verification_title"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:fontFamily="@string/font_family_regular"
        android:gravity="center"
        android:text="@string/verification_alert"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/verify_process"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:fontFamily="@string/font_family_regular"
        android:gravity="center"
        android:text="@string/instruction_to_verify"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alert"/>

    <Button
        android:id="@+id/button_one"
        android:layout_width="55.04dp"
        android:layout_height="55.04dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/round_button"
        android:text="@string/btn_one"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/button_two"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verify_process" />

    <Button
        android:id="@+id/button_two"
        android:layout_width="55.04dp"
        android:layout_height="55.04dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/round_button"
        android:text="@string/btn_two"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/button_three"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_one"
        app:layout_constraintTop_toBottomOf="@id/verify_process" />

    <Button
        android:id="@+id/button_three"
        android:layout_width="55.04dp"
        android:layout_height="55.04dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/round_button"
        android:text="@string/btn_three"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/button_four"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_two"
        app:layout_constraintTop_toBottomOf="@id/verify_process" />

    <Button
        android:id="@+id/button_four"
        android:layout_width="55.04dp"
        android:layout_height="55.04dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/round_button"
        android:text="@string/btn_four"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/button_five"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_three"
        app:layout_constraintTop_toBottomOf="@id/verify_process" />

    <Button
        android:id="@+id/button_five"
        android:layout_width="55.04dp"
        android:layout_height="55.04dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/round_button"
        android:text="@string/btn_five"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_four"
        app:layout_constraintTop_toBottomOf="@id/verify_process" />

    <TextView
        android:id="@+id/otp_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@string/font_family_light"
        android:text="@string/retry_otp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_one" />

    <ImageView
        android:id="@+id/globe"
        android:layout_width="match_parent"
        android:layout_height="351dp"
        android:src="@drawable/ss"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>